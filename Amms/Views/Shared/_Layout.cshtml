<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
    <!-- Document Meta
        ============================================= -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--IE Compatibility Meta-->
    <meta name="author" content="zytheme" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="construction html5 template">
    <link href="~/Content/images/favicon/favicon.ico" rel="icon">

    <!-- Fonts
        ============================================= -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i%7CRaleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i%7CUbuntu:300,300i,400,400i,500,500i,700,700i' rel='stylesheet' type='text/css'>

    <!-- Stylesheets
        ============================================= -->
    <link href="~/Content/css/external.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/custom.css" rel="stylesheet">

    <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
          <script src="~/Content/js/html5shiv.js"></script>
          <script src="~/Content/js/respond.min.js"></script>
        <![endif]-->
    <!-- Document Title
        ============================================= -->
    <title>Automobile Service Management System</title>
</head>
<body>

	<div id="wrapper" class="wrapper clearfix">
		<header id="navbar-spy" class="header header-1">
			<div class="top-bar">
				<div class="container">
					<div class="row">
						<div class="col-xs-12 col-sm-6 col-md-5">
							<ul class="list-inline top-contact">
								<li><span>Hotline :</span> + 94 777 77 7777</li>
								<li><span>Email :</span> asms@cs.com</li>
							</ul>
						</div>
						<div class="col-xs-12 col-sm-6 col-md-7">
							<ul class="list-inline pull-right top-links">
								@if (!string.IsNullOrEmpty(Session["FirstName"] as string))
								{
									using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
									{
										@Html.AntiForgeryToken()
										<li>
											<a href="@Url.Action("Profile", "User")"> &nbsp Hi @Session["FirstName"]</a>
											<a href="javascript:document.getElementById('logoutForm').submit()"> / Logout</a>
										</li>
									}

								}
								else
								{
									<li>
										@Html.ActionLink("Login", "Login", "User")
										/
										@Html.ActionLink("Register", "Registration", "User")
									</li>
								}
							</ul>
						</div>
					</div>
					<!-- .row end -->
				</div>
				<!-- .container end -->
			</div>
			<!-- .top-bar end -->
			<!-- .top-Nav Bar start -->
			@Html.Partial("_Nav")
			<!-- .top-Nav Bar end -->
		</header>


		<!-- Render Body
		============================================= -->
		<section id="offers" class="offers">
			<div class="container">
				<div class="row">
					@RenderBody()
				</div>
			</div>
			<!-- .container end -->
		</section>
		<!-- #Render Body end -->
		<!-- Footer #2
		============================================= -->
		<footer id="footer" class="footer footer-2">
			@Html.Partial("_Footer")
		</footer>
	</div>


	<div class="container body-content">
		@*@RenderBody()*@
		<hr />

	</div>

	<script src="~/Scripts/jquery-2.2.4.min.js"></script>

	<script src="~/Scripts/plugins.js"></script>
	<script src="~/Scripts/functions.js"></script>
	<script src="~/Scripts/invoice.js"></script>
	@RenderSection("Scripts", false)
</body>
</html>